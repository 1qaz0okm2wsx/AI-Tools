    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let lastLogTimestamp = 0;
        let logInterval = null;

        // 初始化
        document.addEventListener('DOMContentLoaded', () => {
            refreshStatus();
            loadSites();
            loadCookies();
            loadModels();
            startLogPolling();
        });

        // 刷新浏览器状态
        async function refreshStatus() {
            try {
                const response = await fetch('/v1/browser/health');
                const data = await response.json();

                const statusDot = document.getElementById('statusDot');
                const statusText = document.getElementById('statusText');
                const currentUrl = document.getElementById('currentUrl');
                const currentTitle = document.getElementById('currentTitle');
                const loginStatus = document.getElementById('loginStatus');
                const chromeAlert = document.getElementById('chromeAlert');

                // 隐藏警告
                if (chromeAlert) chromeAlert.style.display = 'none';

                if (data.browser && data.browser.connected) {
                    statusDot.className = 'status-dot connected';
                    statusText.textContent = '已连接';
                    currentUrl.textContent = data.browser.url || '-';
                    currentTitle.textContent = data.browser.title || '-';

                    if (data.browser.isLoggedIn) {
                        loginStatus.className = 'badge bg-success';
                        loginStatus.textContent = '已登录';
                    } else {
                        loginStatus.className = 'badge bg-warning';
                        loginStatus.textContent = '未登录';
                    }
                } else {
                    statusDot.className = 'status-dot disconnected';
                    statusText.textContent = '未连接';
                    currentUrl.textContent = '-';
                    currentTitle.textContent = '-';
                    loginStatus.className = 'badge bg-secondary';
                    loginStatus.textContent = '未知';

                    // 显示Chrome未启动提示
                    if (data.browser && data.browser.error) {
                        const errorMessage = data.browser.error;

                        if (chromeAlert) {
                            chromeAlert.style.display = 'block';

                            const alertBody = chromeAlert.querySelector('.alert-body') || chromeAlert;

                            if (errorMessage.includes('未以远程调试模式启动')) {
                                chromeAlert.className = 'alert alert-warning mt-3';
                                alertBody.innerHTML = `
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <strong>Chrome 未以远程调试模式启动</strong>
                                    <div class="mt-2">
                                        <small>请按照以下步骤操作：</small>
                                        <ol class="mb-0 mt-1 ps-4">
                                            <li><small>找到项目目录中的 <code>启动Chrome.bat</code> 文件</small></li>
                                            <li><small>双击运行该文件</small></li>
                                            <li><small>等待Chrome启动完成</small></li>
                                            <li><small>刷新此页面</small></li>
                                        </ol>
                                    </div>
                                `;
                            } else {
                                chromeAlert.className = 'alert alert-danger mt-3';
                                alertBody.innerHTML = `
                                    <i class="bi bi-x-circle-fill me-2"></i>
                                    <strong>浏览器连接失败</strong>
                                    <div class="text-muted small mt-1">${errorMessage}</div>
                                `;
                            }
                        }
                    }
                }
            } catch (error) {
                document.getElementById('statusDot').className = 'status-dot disconnected';
                document.getElementById('statusText').textContent = '连接失败';
            }
        }

        // 加载支持的网站
        async function loadSites() {
            try {
                const response = await fetch('/api/browser/config');
                window.sitesConfig = await response.json();
                
                const container = document.getElementById('sitesList');
                container.innerHTML = '';
                
                for (const [domain, config] of Object.entries(window.sitesConfig)) {
                    if (domain === '_global') continue;
                    
                    const col = document.createElement('div');
                    col.className = 'col-6';
                    col.innerHTML = `
                        <div class="site-card card p-2 text-center" onclick="openSite('${domain}')">
                            <button class="btn btn-sm btn-outline-secondary edit-btn" onclick="event.stopPropagation(); editSite('${domain}')">
                                <i class="bi bi-pencil"></i>
                            </button>
                            <small class="text-truncate">${domain}</small>
                            ${config.stealth ? '<i class="bi bi-shield-check text-success ms-1" title="隐身模式"></i>' : ''}
                        </div>
                    `;
                    container.appendChild(col);
                }
            } catch (error) {
                console.error('加载网站列表失败:', error);
            }
        }

        // 打开网站
        async function openSite(site) {
            try {
                const response = await fetch('/api/browser/open', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ site })
                });
                
                const result = await response.json();
                if (result.status === 'success') {
                    addLog('info', `已打开网站: ${site}`);
                    setTimeout(refreshStatus, 2000);
                } else {
                    addLog('error', `打开网站失败: ${result.error}`);
                }
            } catch (error) {
                addLog('error', `打开网站出错: ${error.message}`);
            }
        }

        // 加载Cookie列表
        async function loadCookies() {
            try {
                const response = await fetch('/api/browser/cookies');
                const data = await response.json();
                
                const container = document.getElementById('cookiesList');
                container.innerHTML = '';
                
                if (data.domains && data.domains.length > 0) {
                    data.domains.forEach(domain => {
                        const item = document.createElement('div');
                        item.className = 'd-flex justify-content-between align-items-center p-2 border-bottom';
                        item.innerHTML = `
                            <span class="text-truncate">${domain}</span>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteCookie('${domain}')">
                                <i class="bi bi-trash"></i>
                            </button>
                        `;
                        container.appendChild(item);
                    });
                } else {
                    container.innerHTML = '<div class="text-muted text-center p-3">暂无保存的Cookie</div>';
                }
            } catch (error) {
                console.error('加载Cookie列表失败:', error);
            }
        }

        // 保存当前Cookie
        async function saveCookies() {
            try {
                const response = await fetch('/api/browser/cookies/save', { method: 'POST' });
                const result = await response.json();
                
                if (result.status === 'success') {
                    addLog('info', `Cookie已保存: ${result.domain} (${result.count}个)`);
                    loadCookies();
                }
            } catch (error) {
                addLog('error', `保存Cookie失败: ${error.message}`);
            }
        }

        // 删除Cookie
        async function deleteCookie(domain) {
            if (!confirm(`确定要删除 ${domain} 的Cookie吗？`)) return;
            
            try {
                await fetch(`/api/browser/cookies/${encodeURIComponent(domain)}`, { method: 'DELETE' });
                addLog('info', `已删除Cookie: ${domain}`);
                loadCookies();
            } catch (error) {
                addLog('error', `删除Cookie失败: ${error.message}`);
            }
        }

        // 加载模型列表
        async function loadModels() {
            try {
                const response = await fetch('/v1/browser/models');
                const data = await response.json();
                
                const select = document.getElementById('modelSelect');
                select.innerHTML = '';
                
                if (data.data) {
                    data.data.forEach(model => {
                        const option = document.createElement('option');
                        option.value = model.id;
                        option.textContent = model.id;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('加载模型列表失败:', error);
            }
        }

        // 发送测试消息
        async function sendTestMessage() {
            const message = document.getElementById('messageInput').value;
            const model = document.getElementById('modelSelect').value;
            const stream = document.getElementById('streamMode').checked;
            const btn = document.getElementById('sendBtn');
            const output = document.getElementById('responseOutput');
            
            if (!message.trim()) {
                alert('请输入消息内容');
                return;
            }
            
            btn.disabled = true;
            btn.innerHTML = '<i class="bi bi-hourglass-split"></i> 发送中...';
            output.textContent = '';
            
            try {
                const response = await fetch('/v1/browser/chat/completions', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        model,
                        messages: [{ role: 'user', content: message }],
                        stream
                    })
                });
                
                if (stream) {
                    const reader = response.body.getReader();
                    const decoder = new TextDecoder();
                    
                    while (true) {
                        const { done, value } = await reader.read();
                        if (done) break;
                        
                        const text = decoder.decode(value);
                        const lines = text.split('\n');
                        
                        for (const line of lines) {
                            if (line.startsWith('data: ') && !line.includes('[DONE]')) {
                                try {
                                    const data = JSON.parse(line.slice(6));
                                    if (data.choices && data.choices[0].delta?.content) {
                                        output.textContent += data.choices[0].delta.content;
                                    }
                                    if (data.error) {
                                        output.textContent = `错误: ${data.error.message}`;
                                    }
                                } catch (e) {}
                            }
                        }
                    }
                } else {
                    const data = await response.json();
                    if (data.choices && data.choices[0]) {
                        output.textContent = data.choices[0].message.content;
                    } else if (data.error) {
                        output.textContent = `错误: ${data.error.message}`;
                    }
                }
            } catch (error) {
                output.textContent = `请求失败: ${error.message}`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-send"></i> 发送测试';
            }
        }

        // 日志轮询
        function startLogPolling() {
            logInterval = setInterval(async () => {
                try {
                    const response = await fetch(`/api/browser/logs?since=${lastLogTimestamp}`);
                    const data = await response.json();
                    
                    if (data.logs && data.logs.length > 0) {
                        data.logs.forEach(log => {
                            addLogEntry(log);
                        });
                        lastLogTimestamp = data.timestamp;
                    }
                } catch (error) {
                    // 忽略轮询错误
                }
            }, 2000);
        }

        function addLogEntry(log) {
            const container = document.getElementById('logContainer');
            const entry = document.createElement('div');
            entry.className = `log-entry ${log.level}`;
            
            const time = new Date(log.timestamp * 1000).toLocaleTimeString();
            entry.textContent = `[${time}] ${log.message}`;
            
            container.appendChild(entry);
            container.scrollTop = container.scrollHeight;
        }

        function addLog(level, message) {
            addLogEntry({
                level,
                message,
                timestamp: Date.now() / 1000
            });
        }

        function clearLogs() {
            document.getElementById('logContainer').innerHTML = '';
            fetch('/api/browser/logs', { method: 'DELETE' });
        }

        // 定时刷新状态
        setInterval(refreshStatus, 30000);
        
        // ============ 站点管理功能 ============
        
        let currentEditDomain = null;
        let currentSiteConfig = null;
        
        // 添加新站点
        async function addNewSite() {
            const domain = document.getElementById('newSiteDomain').value.trim();
            const url = document.getElementById('newSiteUrl').value.trim();
            const stealth = document.getElementById('newSiteStealth').checked;
            
            if (!domain) {
                alert('请输入站点域名');
                return;
            }
            
            const config = {
                url: url || `https://${domain}`,
                selectors: {
                    input_box: '',
                    send_btn: '',
                    result_container: '',
                    new_chat_btn: ''
                },
                workflow: [
                    { action: 'CLICK', target: 'new_chat_btn', optional: true, value: null },
                    { action: 'WAIT', target: '', optional: false, value: 0.5 },
                    { action: 'FILL_INPUT', target: 'input_box', optional: false, value: null },
                    { action: 'CLICK', target: 'send_btn', optional: true, value: null },
                    { action: 'STREAM_WAIT', target: 'result_container', optional: false, value: null }
                ],
                stealth: stealth
            };
            
            try {
                const response = await fetch('/api/browser/config', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ config: { [domain]: config } })
                });
                
                const result = await response.json();
                if (result.status === 'success') {
                    addLog('info', `已添加站点: ${domain}`);
                    bootstrap.Modal.getInstance(document.getElementById('addSiteModal')).hide();
                    document.getElementById('addSiteForm').reset();
                    loadSites();
                } else {
                    addLog('error', `添加站点失败: ${result.error}`);
                }
            } catch (error) {
                addLog('error', `添加站点出错: ${error.message}`);
            }
        }
        
        // 编辑站点
        function editSite(domain) {
            currentEditDomain = domain;
            currentSiteConfig = JSON.parse(JSON.stringify(window.sitesConfig[domain]));
            
            document.getElementById('editSiteDomain').textContent = domain;
            
            // 渲染选择器列表
            renderSelectors();
            
            // 渲染工作流步骤
            renderWorkflow();
            
            // 设置JSON编辑器
            document.getElementById('siteJsonEditor').value = JSON.stringify(currentSiteConfig, null, 2);
            
            const modal = new bootstrap.Modal(document.getElementById('editSiteModal'));
            modal.show();
        }
        
        // 渲染选择器列表
        function renderSelectors() {
            const container = document.getElementById('selectorsList');
            const selectors = currentSiteConfig.selectors || {};
            
            container.innerHTML = '';
            
            for (const [key, value] of Object.entries(selectors)) {
                const item = document.createElement('div');
                item.className = 'selector-item';
                item.innerHTML = `
                    <div class="selector-key">
                        <input type="text" class="form-control form-control-sm" value="${key}" data-original="${key}">
                    </div>
                    <div class="selector-value">
                        <input type="text" class="form-control form-control-sm" value="${value || ''}" placeholder="CSS选择器" data-key="${key}">
                    </div>
                    <button class="btn btn-sm btn-outline-danger" onclick="removeSelector(this, '${key}')">
                        <i class="bi bi-trash"></i>
                    </button>
                `;
                container.appendChild(item);
            }
        }
        
        // 添加选择器
        function addSelector() {
            const key = prompt('请输入选择器名称（如 input_box）:');
            if (key && key.trim()) {
                currentSiteConfig.selectors = currentSiteConfig.selectors || {};
                currentSiteConfig.selectors[key.trim()] = '';
                renderSelectors();
            }
        }
        
        // 删除选择器
        function removeSelector(btn, key) {
            if (confirm(`确定要删除选择器 "${key}" 吗？`)) {
                delete currentSiteConfig.selectors[key];
                renderSelectors();
            }
        }
        
        // 渲染工作流步骤
        function renderWorkflow() {
            const container = document.getElementById('workflowSteps');
            const workflow = currentSiteConfig.workflow || [];
            
            container.innerHTML = '';
            
            workflow.forEach((step, index) => {
                const div = document.createElement('div');
                div.className = 'workflow-step';
                div.setAttribute('data-index', index);
                
                const actionColors = {
                    'CLICK': 'primary',
                    'FILL_INPUT': 'success',
                    'WAIT': 'warning',
                    'KEY_PRESS': 'info',
                    'STREAM_WAIT': 'danger',
                    'STREAM_OUTPUT': 'danger'
                };
                
                const color = actionColors[step.action] || 'secondary';
                
                div.innerHTML = `
                    <span class="step-handle"><i class="bi bi-grip-vertical"></i></span>
                    <span class="badge bg-${color} action-badge">${step.action}</span>
                    <div class="step-content">
                        <small class="text-muted">目标:</small>
                        <input type="text" class="form-control form-control-sm d-inline-block" style="width: 120px"
                               value="${step.target || ''}" onchange="updateStepTarget(${index}, this.value)">
                        ${step.action === 'WAIT' ? `
                            <small class="text-muted ms-2">时长:</small>
                            <input type="number" class="form-control form-control-sm d-inline-block" style="width: 70px"
                                   value="${step.value || 0.5}" step="0.1" onchange="updateStepValue(${index}, this.value)">
                            <small class="text-muted">秒</small>
                        ` : ''}
                        ${step.action === 'KEY_PRESS' ? `
                            <small class="text-muted ms-2">按键:</small>
                            <input type="text" class="form-control form-control-sm d-inline-block" style="width: 80px"
                                   value="${step.target || 'Enter'}" onchange="updateStepTarget(${index}, this.value)">
                        ` : ''}
                        <div class="form-check form-check-inline ms-2">
                            <input class="form-check-input" type="checkbox" ${step.optional ? 'checked' : ''}
                                   onchange="updateStepOptional(${index}, this.checked)">
                            <label class="form-check-label small">可选</label>
                        </div>
                    </div>
                    <div class="step-actions">
                        <button class="btn btn-sm btn-outline-secondary" onclick="moveStep(${index}, -1)" ${index === 0 ? 'disabled' : ''}>
                            <i class="bi bi-arrow-up"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-secondary" onclick="moveStep(${index}, 1)" ${index === workflow.length - 1 ? 'disabled' : ''}>
                            <i class="bi bi-arrow-down"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" onclick="removeStep(${index})">
                            <i class="bi bi-trash"></i>
                        </button>
                    </div>
                `;
                container.appendChild(div);
            });
        }
        
        // 添加工作流步骤
        function addWorkflowStep(action) {
            currentSiteConfig.workflow = currentSiteConfig.workflow || [];
            
            const step = {
                action: action,
                target: action === 'WAIT' ? '' : (action === 'KEY_PRESS' ? 'Enter' : ''),
                optional: action === 'CLICK',
                value: action === 'WAIT' ? 0.5 : null
            };
            
            currentSiteConfig.workflow.push(step);
            renderWorkflow();
            updateJsonEditor();
        }
        
        // 更新步骤目标
        function updateStepTarget(index, value) {
            currentSiteConfig.workflow[index].target = value;
            updateJsonEditor();
        }
        
        // 更新步骤值
        function updateStepValue(index, value) {
            currentSiteConfig.workflow[index].value = parseFloat(value) || 0.5;
            updateJsonEditor();
        }
        
        // 更新步骤可选状态
        function updateStepOptional(index, optional) {
            currentSiteConfig.workflow[index].optional = optional;
            updateJsonEditor();
        }
        
        // 移动步骤
        function moveStep(index, direction) {
            const newIndex = index + direction;
            if (newIndex < 0 || newIndex >= currentSiteConfig.workflow.length) return;
            
            const workflow = currentSiteConfig.workflow;
            [workflow[index], workflow[newIndex]] = [workflow[newIndex], workflow[index]];
            renderWorkflow();
            updateJsonEditor();
        }
        
        // 删除步骤
        function removeStep(index) {
            if (confirm('确定要删除此步骤吗？')) {
                currentSiteConfig.workflow.splice(index, 1);
                renderWorkflow();
                updateJsonEditor();
            }
        }
        
        // 更新JSON编辑器
        function updateJsonEditor() {
            document.getElementById('siteJsonEditor').value = JSON.stringify(currentSiteConfig, null, 2);
        }
        
        // 从选择器表单收集数据
        function collectSelectorsFromForm() {
            const items = document.querySelectorAll('#selectorsList .selector-item');
            const selectors = {};
            
            items.forEach(item => {
                const keyInput = item.querySelector('.selector-key input');
                const valueInput = item.querySelector('.selector-value input');
                const key = keyInput.value.trim();
                const value = valueInput.value.trim();
                if (key) {
                    selectors[key] = value || null;
                }
            });
            
            return selectors;
        }
        
        // 保存站点配置
        async function saveSiteConfig() {
            try {
                // 检查当前激活的tab
                const activeTab = document.querySelector('#editTabs .nav-link.active');
                const tabId = activeTab.getAttribute('data-bs-target');
                
                if (tabId === '#jsonTab') {
                    // 从JSON编辑器解析
                    try {
                        currentSiteConfig = JSON.parse(document.getElementById('siteJsonEditor').value);
                    } catch (e) {
                        alert('JSON格式错误: ' + e.message);
                        return;
                    }
                } else if (tabId === '#selectorsTab') {
                    // 从表单收集选择器
                    currentSiteConfig.selectors = collectSelectorsFromForm();
                }
                
                const response = await fetch('/api/browser/config', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ config: { [currentEditDomain]: currentSiteConfig } })
                });
                
                const result = await response.json();
                if (result.status === 'success') {
                    addLog('info', `站点配置已保存: ${currentEditDomain}`);
                    bootstrap.Modal.getInstance(document.getElementById('editSiteModal')).hide();
                    loadSites();
                } else {
                    addLog('error', `保存失败: ${result.error}`);
                }
            } catch (error) {
                addLog('error', `保存出错: ${error.message}`);
            }
        }
        
        // 删除站点
        async function deleteSite() {
            if (!confirm(`确定要删除站点 "${currentEditDomain}" 吗？此操作不可恢复！`)) {
                return;
            }
            
            try {
                const response = await fetch(`/api/browser/config/${encodeURIComponent(currentEditDomain)}`, {
                    method: 'DELETE'
                });
                
                const result = await response.json();
                if (result.status === 'success') {
                    addLog('info', `已删除站点: ${currentEditDomain}`);
                    bootstrap.Modal.getInstance(document.getElementById('editSiteModal')).hide();
                    loadSites();
                } else {
                    addLog('error', `删除失败: ${result.error}`);
                }
            } catch (error) {
                addLog('error', `删除出错: ${error.message}`);
            }
        }
        
        // 监听JSON编辑器变化，同步到配置
        document.getElementById('siteJsonEditor').addEventListener('input', function() {
            try {
                currentSiteConfig = JSON.parse(this.value);
                this.classList.remove('is-invalid');
            } catch (e) {
                this.classList.add('is-invalid');
            }
        });
    </script>
