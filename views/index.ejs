<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI模型管理工具</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --success-gradient: linear-gradient(135deg, #13B497 0%, #59D4A8 100%);
            --warning-gradient: linear-gradient(135deg, #FFB347 0%, #FFCC33 100%);
            --info-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
            --card-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            --hover-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            padding-top: 30px;
            padding-bottom: 50px;
        }

        .header-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 40px;
            background: white;
            padding: 20px 30px;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
        }

        h1 {
            background: var(--primary-gradient);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            font-weight: 700;
            margin: 0;
            display: flex;
            align-items: center;
        }

        h1 i {
            -webkit-text-fill-color: #764ba2;
            margin-right: 10px;
        }

        .card {
            margin-bottom: 25px;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            transition: all 0.3s ease;
            overflow: hidden;
            border: none;
            background: white;
        }

        .card:hover {
            transform: translateY(-10px);
            box-shadow: var(--hover-shadow);
        }

        .provider-header {
            background: var(--primary-gradient);
            color: white;
            padding: 15px 20px;
            border: none;
        }

        .model-badge {
            margin-right: 8px;
            margin-bottom: 8px;
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 500;
            background: var(--info-gradient);
            border: none;
            color: white;
            box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
        }

        .api-key {
            font-family: 'Courier New', monospace;
            font-size: 0.8rem;
            background: rgba(255, 255, 255, 0.2);
            padding: 4px 8px;
            border-radius: 5px;
            margin-top: 5px;
            word-break: break-all;
        }

        .action-buttons {
            margin-top: 15px;
        }

        .no-providers {
            text-align: center;
            padding: 80px 20px;
            background: white;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
        }

        .no-providers i {
            font-size: 4rem;
            background: var(--secondary-gradient);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 20px;
        }

        .no-providers h3 {
            color: #495057;
            margin-bottom: 20px;
        }

        .btn {
            border-radius: 10px;
            padding: 8px 16px;
            font-weight: 500;
            transition: all 0.2s;
            border: none;
        }

        .btn-primary {
            background: var(--primary-gradient);
            box-shadow: 0 4px 10px rgba(102, 126, 234, 0.4);
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(102, 126, 234, 0.5);
        }

        .btn-success {
            background: var(--success-gradient);
            box-shadow: 0 4px 10px rgba(19, 180, 151, 0.4);
        }

        .btn-success:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(19, 180, 151, 0.5);
        }

        .btn-warning {
            background: var(--warning-gradient);
            box-shadow: 0 4px 10px rgba(255, 179, 71, 0.4);
        }

        .btn-warning:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(255, 179, 71, 0.5);
        }

        .btn-danger {
            background: var(--secondary-gradient);
            box-shadow: 0 4px 10px rgba(240, 147, 251, 0.4);
        }

        .btn-danger:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(240, 147, 251, 0.5);
        }

        .btn-outline-secondary {
            border: 2px solid #e9ecef;
            color: #6c757d;
        }

        .btn-outline-secondary:hover {
            background-color: #f8f9fa;
            border-color: #dee2e6;
        }

        .btn-outline-info {
            border: 2px solid #4facfe;
            color: #4facfe;
        }

        .btn-outline-info:hover {
            background: var(--info-gradient);
            border-color: #00f2fe;
            color: white;
        }

        .dropdown-menu {
            border-radius: 10px;
            box-shadow: var(--card-shadow);
            border: none;
            padding: 10px;
        }

        .dropdown-item {
            border-radius: 8px;
            margin: 2px 0;
            transition: all 0.2s;
        }

        .dropdown-item:hover {
            background: #f8f9fa;
            transform: translateX(5px);
        }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 15px 20px;
            margin-bottom: 25px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .alert-success {
            background: var(--success-gradient);
            color: white;
        }

        .alert-danger {
            background: var(--secondary-gradient);
            color: white;
        }

        .toast-container {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1050;
        }

        /* 动画效果 */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        /* 响应式设计 */
        @media (max-width: 768px) {
            .header-actions {
                flex-direction: column;
                align-items: flex-start;
                gap: 15px;
            }

            .btn-group {
                width: 100%;
            }

            .dropdown-toggle {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="container py-4">
        <!-- 显示错误消息 -->
        <% if (typeof error !== 'undefined' && error) { %>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill"></i> <%= error %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <!-- 显示成功消息 -->
        <% if (typeof success !== 'undefined' && success) { %>
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill"></i> <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>

        <div class="header-actions">
            <h1><i class="bi bi-cpu"></i> AI模型管理工具</h1>
            <div>
                <div class="btn-group me-2" role="group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" id="healthStatusDropdown">
                        <i class="bi bi-activity" id="healthStatusIcon"></i> <span id="healthStatusText">检查中...</span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><h6 class="dropdown-header">系统状态</h6></li>
                        <li><div id="healthDetails" class="px-3 py-2">正在获取系统状态...</div></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="/health-status" target="_blank">查看详细状态</a></li>
                        <li><hr class="dropdown-divider"></li>
                        <li><a class="dropdown-item" href="#" onclick="checkAllApis()"><i class="bi bi-arrow-clockwise"></i> 立即检查所有API</a></li>
                    </ul>
                </div>
                <div class="btn-group me-2" role="group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-download"></i> 导出
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/export/json" target="_blank"><i class="bi bi-filetype-json"></i> 导出为JSON</a></li>
                        <li><a class="dropdown-item" href="/export/csv" target="_blank"><i class="bi bi-filetype-csv"></i> 导出为CSV</a></li>
                    </ul>
                </div>
                <div class="btn-group me-2" role="group">
                    <button type="button" class="btn btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-upload"></i> 导入
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#" onclick="showImportModal('json')"><i class="bi bi-filetype-json"></i> 导入JSON文件</a></li>
                        <li><a class="dropdown-item" href="#" onclick="showImportModal('csv')"><i class="bi bi-filetype-csv"></i> 导入CSV文件</a></li>
                    </ul>
                </div>
                <a href="/browser" class="btn btn-outline-primary me-2">
                    <i class="bi bi-browser-chrome"></i> 浏览器自动化
                </a>
                <a href="/logs" class="btn btn-outline-info me-2">
                    <i class="bi bi-journal-text"></i> 操作日志
                </a>
                <a href="/scheduler" class="btn btn-outline-warning me-2">
                    <i class="bi bi-clock-history"></i> 定时任务
                </a>
                <a href="/billing" class="btn btn-outline-success me-2">
                    <i class="bi bi-wallet2"></i> 额度统计
                </a>
                <a href="/add-provider" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> 添加AI服务提供商
                </a>
            </div>
        </div>

        <% if (providers.length === 0) { %>
            <div class="no-providers">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <h3>暂无AI服务提供商</h3>
                <p>点击上方"添加AI服务提供商"按钮开始添加</p>
            </div>
        <% } else { %>
            <div class="row">
                <% providers.forEach(provider => { %>
                    <div class="col-md-6 col-lg-4">
                        <div class="card">
                            <div class="provider-header d-flex justify-content-between align-items-center">
                                <div class="d-flex align-items-center">
                                    <h5 class="mb-0"><%= provider.name %></h5>
                                    <span class="ms-2 badge bg-light text-primary" style="font-size: 0.7rem;">ID: <%= provider.id %></span>
                                </div>
                                <span class="badge bg-secondary api-status-badge" data-provider="<%= provider.name %>" title="API状态">
                                    <i class="bi bi-question-circle"></i> 未知
                                </span>
                            </div>
                            <div class="card-body">
                                <% if (provider.website) { %>
                                    <p><strong>官方网站:</strong> <a href="<%= provider.website %>" target="_blank"><%= provider.website %></a></p>
                                <% } %>
                                <p><strong>API地址:</strong> <a href="<%= provider.url %>" target="_blank"><%= provider.url %></a></p>
                                <p><strong>API密钥:</strong>
                                    <% if (provider.api_key) { %>
                                        <span class="api-key"><%= provider.api_key.substring(0, 10) %>...</span>
                                    <% } else { %>
                                        <a href="/provider/<%= provider.id %>/api-keys" class="btn btn-sm btn-outline-info">管理密钥</a>
                                    <% } %>
                                </p>
                                <p><strong>可用模型:</strong> <span class="badge bg-secondary"><%= provider.models ? provider.models.length : 0 %></span></p>
                                <% if (provider.models && provider.models.length > 0) { %>
                                    <div class="models-container">
                                        <% provider.models.forEach(model => { %>
                                            <div class="model-item">
                                                <div class="d-flex align-items-center">
                                                    <span class="model-name"><%= model.model_name || model.model_id %></span>
                                                    <% if (model.category) { %>
                                                        <span class="ms-2 badge bg-info" style="font-size: 0.6rem;"><%= model.category %></span>
                                                    <% } %>
                                                </div>
                                                <button class="btn btn-sm btn-outline-secondary copy-btn" onclick="copyToClipboard('<%= model.model_id %>')" title="复制模型ID">
                                                    <i class="bi bi-clipboard"></i>
                                                </button>
                                            </div>
                                        <% }); %>
                                    </div>
                                <% } else { %>
                                    <span class="text-muted">尚未检测模型</span>
                                <% } %>

                                <style>
                                    .models-container {
                                        display: flex;
                                        flex-wrap: wrap;
                                        gap: 8px;
                                        margin-top: 10px;
                                        max-height: 300px;
                                        overflow-y: auto;
                                        padding: 5px;
                                        background: rgba(255, 255, 255, 0.5);
                                        border-radius: 8px;
                                    }

                                    .model-item {
                                        background: white;
                                        border: 1px solid #e9ecef;
                                        border-radius: 6px;
                                        padding: 6px 10px;
                                        font-size: 0.9rem;
                                        display: flex;
                                        align-items: center;
                                        justify-content: space-between;
                                        width: 100%;
                                        transition: all 0.2s;
                                    }

                                    .model-item:hover {
                                        background: #f8f9fa;
                                        border-color: #dee2e6;
                                        transform: translateX(2px);
                                    }

                                    .model-name {
                                        font-family: 'Courier New', monospace;
                                        font-weight: 600;
                                        color: #495057;
                                        word-break: break-all;
                                    }

                                    .copy-btn {
                                        padding: 2px 6px;
                                        font-size: 0.75rem;
                                        margin-left: 8px;
                                        opacity: 0.6;
                                    }

                                    .model-item:hover .copy-btn {
                                        opacity: 1;
                                    }
                                </style>

                                <div class="action-buttons">
                                    <a href="/provider/<%= provider.id %>/api-keys" class="btn btn-sm btn-outline-info me-1" title="管理API密钥">
                                        <i class="bi bi-key"></i> 密钥
                                    </a>
                                    <a href="/edit-provider/<%= provider.id %>" class="btn btn-sm btn-outline-warning me-1">
                                        <i class="bi bi-pencil"></i> 编辑
                                    </a>
                                    <form action="/detect-models/<%= provider.id %>" method="POST" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-outline-primary me-1">
                                            <i class="bi bi-search"></i> 检测模型
                                        </button>
                                    </form>
                                    <form action="/delete-provider/<%= provider.id %>" method="POST" style="display: inline;" 
                                          onsubmit="return confirm('确定要删除此提供商及其所有模型吗？')">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> 删除
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        <% } %>

        <!-- 分页导航 -->
        <% if (pagination && pagination.totalPages > 1) { %>
            <nav aria-label="提供商列表分页">
                <ul class="pagination justify-content-center mt-4">
                    <% if (pagination.hasPrevPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.prevPage %>" aria-label="上一页">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link" aria-hidden="true">&laquo;</span>
                        </li>
                    <% } %>

                    <!-- 页码 -->
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <% if (i === pagination.currentPage) { %>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link"><%= i %></span>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <% if (pagination.hasNextPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.nextPage %>" aria-label="下一页">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link" aria-hidden="true">&raquo;</span>
                        </li>
                    <% } %>
                </ul>

                <div class="text-center text-muted mt-2">
                    显示第 <%= (pagination.currentPage - 1) * 10 + 1 %> - 
                    <%= Math.min(pagination.currentPage * 10, pagination.totalItems) %> 条，
                    共 <%= pagination.totalItems %> 条记录
                </div>
            </nav>
        <% } %>
    </div>

    <!-- 导入模态框 -->
    <div class="modal fade" id="importModal" tabindex="-1" aria-labelledby="importModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="importModalLabel">导入数据</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="importFile" class="form-label">选择文件</label>
                        <input class="form-control" type="file" id="importFile" accept=".json,.csv">
                    </div>
                    <div class="alert alert-info">
                        <i class="bi bi-info-circle"></i> 请选择一个有效的JSON或CSV文件。导入将添加新的提供商，不会覆盖现有数据。
                    </div>
                    <div id="importProgress" class="progress mt-3 d-none">
                        <div class="progress-bar" role="progressbar" style="width: 0%" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">0%</div>
                    </div>
                    <div id="importResult" class="mt-3"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" id="importButton">导入</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        // 显示导入模态框
        function showImportModal(type) {
            document.getElementById('importModalLabel').textContent = `导入${type.toUpperCase()}文件`;
            document.getElementById('importFile').accept = `.${type}`;
            document.getElementById('importFile').value = '';
            document.getElementById('importProgress').classList.add('d-none');
            document.getElementById('importResult').innerHTML = '';

            const modal = new bootstrap.Modal(document.getElementById('importModal'));
            modal.show();
        }

        // 导入按钮点击事件
        document.getElementById('importButton').addEventListener('click', function() {
            const fileInput = document.getElementById('importFile');
            const file = fileInput.files[0];

            if (!file) {
                alert('请选择一个文件');
                return;
            }

            const isJson = file.name.endsWith('.json');
            const isCsv = file.name.endsWith('.csv');

            if (!isJson && !isCsv) {
                alert('请选择有效的JSON或CSV文件');
                return;
            }

            // 显示进度条
            const progressContainer = document.getElementById('importProgress');
            const progressBar = progressContainer.querySelector('.progress-bar');
            progressContainer.classList.remove('d-none');

            // 读取文件
            const reader = new FileReader();
            reader.onload = function(e) {
                const content = e.target.result;

                try {
                    let data;
                    if (isJson) {
                        data = JSON.parse(content);
                    } else {
                        // 对于CSV，直接发送原始文本
                        data = content;
                    }

                    // 发送导入请求
                    const url = isJson ? '/import/json' : '/import/csv';
                    const options = {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    };

                    // 模拟进度
                    let progress = 0;
                    const progressInterval = setInterval(() => {
                        progress += 10;
                        if (progress > 90) progress = 90;
                        progressBar.style.width = progress + '%';
                        progressBar.textContent = progress + '%';
                        progressBar.setAttribute('aria-valuenow', progress);
                    }, 200);

                    fetch(url, options)
                        .then(response => response.json())
                        .then(result => {
                            clearInterval(progressInterval);
                            progressBar.style.width = '100%';
                            progressBar.textContent = '100%';
                            progressBar.setAttribute('aria-valuenow', 100);

                            // 显示结果
                            const resultDiv = document.getElementById('importResult');
                            if (result.error) {
                                resultDiv.innerHTML = `<div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> 导入失败: ${result.error}</div>`;
                            } else {
                                resultDiv.innerHTML = `<div class="alert alert-success"><i class="bi bi-check-circle"></i> ${result.message}。成功导入 ${result.imported} 个提供商，${result.errors} 个错误。</div>`;

                                // 3秒后刷新页面
                                setTimeout(() => {
                                    window.location.reload();
                                }, 3000);
                            }
                        })
                        .catch(error => {
                            clearInterval(progressInterval);
                            const resultDiv = document.getElementById('importResult');
                            resultDiv.innerHTML = `<div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> 导入失败: ${error.message}</div>`;
                        });
                } catch (error) {
                    const resultDiv = document.getElementById('importResult');
                    resultDiv.innerHTML = `<div class="alert alert-danger"><i class="bi bi-exclamation-triangle"></i> 文件解析失败: ${error.message}</div>`;
                }
            };

            reader.readAsText(file);
        });

        // 获取健康状态并更新UI
        function updateHealthStatus() {
            fetch('/health-status')
                .then(response => response.json())
                .then(data => {
                    const statusIcon = document.getElementById('healthStatusIcon');
                    const statusText = document.getElementById('healthStatusText');
                    const healthDetails = document.getElementById('healthDetails');

                    if (data.status === 'healthy' || data.status === 'ok') {
                        statusIcon.className = 'bi bi-activity text-success';
                        statusText.textContent = '系统正常';
                    } else if (data.status === 'no_checks') {
                        statusIcon.className = 'bi bi-activity text-secondary';
                        statusText.textContent = '检查中...';
                        healthDetails.innerHTML = '<div class="text-muted">系统健康检查尚未完成</div>';
                    } else {
                        statusIcon.className = 'bi bi-activity text-danger';
                        statusText.textContent = '系统异常';

                        // 显示错误详情
                        let detailsHtml = '<div class="text-danger">系统状态异常</div>';
                        if (data.error) {
                            detailsHtml += `<div class="small text-muted">${data.error}</div>`;
                        }
                        healthDetails.innerHTML = detailsHtml;
                    }

                    // 如果有详细数据，显示系统信息
                    if (data.data) {
                        const systemInfo = data.data;
                        let infoHtml = `
                            <div>数据库: <span class="badge bg-${systemInfo.database.status === 'connected' ? 'success' : 'danger'}">${systemInfo.database.status}</span></div>
                            <div>运行时间: ${Math.floor(systemInfo.uptime / 60)} 分钟</div>
                            <div>内存使用: ${systemInfo.memory.used} MB / ${systemInfo.memory.total} MB</div>
                        `;
                        healthDetails.innerHTML = infoHtml;
                    }
                })
                .catch(error => {
                    console.error('获取健康状态失败:', error);
                    const statusIcon = document.getElementById('healthStatusIcon');
                    const statusText = document.getElementById('healthStatusText');
                    const healthDetails = document.getElementById('healthDetails');

                    statusIcon.className = 'bi bi-activity text-warning';
                    statusText.textContent = '状态未知';
                    healthDetails.innerHTML = '<div class="text-warning">无法获取系统状态</div>';
                });
        }

        // 获取API状态并更新UI
        function updateApiStatus() {
            fetch('/api-status')
                .then(response => response.json())
                .then(data => {
                    if (Array.isArray(data)) {
                        data.forEach(status => {
                            const badges = document.querySelectorAll(`.api-status-badge[data-provider="${status.provider}"]`);
                            badges.forEach(badge => {
                                if (status.status === 'available') {
                                    badge.className = 'badge bg-success api-status-badge';
                                    badge.innerHTML = `<i class="bi bi-wifi"></i> ${status.responseTime}ms`;
                                    badge.title = `API在线 (响应时间: ${status.responseTime}ms)`;
                                } else if (status.status === 'unavailable') {
                                    badge.className = 'badge bg-danger api-status-badge';
                                    badge.innerHTML = `<i class="bi bi-wifi-off"></i> 离线`;
                                    badge.title = `API离线: ${status.error || '未知错误'}`;
                                } else if (status.status === 'checking') {
                                    badge.className = 'badge bg-warning text-dark api-status-badge';
                                    badge.innerHTML = `<i class="bi bi-hourglass-split"></i> 检查中`;
                                    badge.title = '正在检查API状态...';
                                } else {
                                    badge.className = 'badge bg-secondary api-status-badge';
                                    badge.innerHTML = `<i class="bi bi-question-circle"></i> 未知`;
                                    badge.title = '状态未知';
                                }
                            });
                        });
                    }
                })
                .catch(error => {
                    console.error('获取API状态失败:', error);
                });
        }

        // 手动触发API检查
        function checkAllApis() {
            const badges = document.querySelectorAll('.api-status-badge');
            badges.forEach(badge => {
                badge.className = 'badge bg-warning text-dark api-status-badge';
                badge.innerHTML = `<i class="bi bi-hourglass-split"></i> 检查中`;
            });

            fetch('/check-api-status', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    // 检查完成后会自动更新状态，这里只需要等待下一次轮询或立即调用一次更新
                    setTimeout(updateApiStatus, 1000);
                    
                    // 显示提示
                    const toast = document.createElement('div');
                    toast.className = 'position-fixed bottom-0 end-0 p-3';
                    toast.style.zIndex = '1100';
                    toast.innerHTML = `
                        <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                            <div class="d-flex">
                                <div class="toast-body">
                                    <i class="bi bi-check-circle me-2"></i> API状态检查已完成
                                </div>
                                <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                            </div>
                        </div>
                    `;
                    document.body.appendChild(toast);
                    setTimeout(() => toast.remove(), 3000);
                })
                .catch(error => {
                    console.error('触发API检查失败:', error);
                    alert('触发API检查失败');
                });
        }

        // 复制到剪贴板功能
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                // 创建一个临时的toast提示
                const toast = document.createElement('div');
                toast.className = 'position-fixed bottom-0 end-0 p-3';
                toast.style.zIndex = '1100';
                toast.innerHTML = `
                    <div class="toast show align-items-center text-white bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                        <div class="d-flex">
                            <div class="toast-body">
                                <i class="bi bi-check-circle me-2"></i> 已复制: ${text}
                            </div>
                            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                        </div>
                    </div>
                `;
                document.body.appendChild(toast);
                
                // 2秒后移除
                setTimeout(() => {
                    toast.remove();
                }, 2000);
            }).catch(err => {
                console.error('复制失败:', err);
                alert('复制失败，请手动复制');
            });
        }

        // 页面加载时立即获取状态
        document.addEventListener('DOMContentLoaded', () => {
            updateHealthStatus();
            updateApiStatus();
            // 页面加载时自动触发一次检查
            checkAllApis();
        });

        // 定期更新状态
        setInterval(updateHealthStatus, 30000); // 每30秒更新系统健康状态
        setInterval(updateApiStatus, 10000);    // 每10秒更新API状态
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
