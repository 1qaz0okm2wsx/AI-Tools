<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>操作日志 - AI模型管理工具</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .log-entry {
            border-left: 4px solid;
            margin-bottom: 1rem;
            padding: 1rem 1.5rem;
            background-color: white;
            border-radius: 0 var(--radius-xl) var(--radius-xl) 0;
            box-shadow: var(--shadow-sm);
            transition: all var(--transition-base);
        }
        .log-entry:hover {
            box-shadow: var(--shadow-md);
            transform: translateX(4px);
        }
        .log-entry.success {
            border-left-color: var(--success-color);
        }
        .log-entry.error {
            border-left-color: var(--danger-color);
        }
        .log-entry.warning {
            border-left-color: var(--warning-color);
        }
        .log-entry.info {
            border-left-color: var(--info-color);
        }
        .log-meta {
            font-size: 0.8rem;
            color: var(--gray-500);
        }
        .filter-section {
            background-color: white;
            padding: 1.25rem 1.5rem;
            border-radius: var(--radius-2xl);
            margin-bottom: 1.5rem;
            box-shadow: var(--shadow-md);
        }
        .status-badge {
            font-size: 0.7rem;
        }
        .operation-type-badge {
            font-size: 0.75rem;
        }
        .page-header {
            background: var(--gradient-primary-subtle);
            border-radius: var(--radius-2xl);
            padding: 2rem;
            margin-bottom: 1.5rem;
        }
        .page-header h1 {
            margin: 0;
            background: var(--gradient-primary);
            background-clip: text;
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-cpu"></i> AI模型管理工具
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">提供商列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/logs">操作日志</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/scheduler">定时任务</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="page-header d-flex justify-content-between align-items-center">
            <div>
                <h1><i class="bi bi-journal-text"></i> 操作日志</h1>
                <p class="text-muted mb-0 mt-2">查看系统所有操作记录</p>
            </div>
            <a href="/" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left"></i> 返回首页
            </a>
        </div>

        <!-- 筛选区域 -->
        <div class="filter-section">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <form method="get" action="/logs">
                        <div class="btn-group" style="width: 100%;">
                            <select class="form-select" name="type" id="operationType" style="flex: 1;">
                                <option value="">所有操作类型</option>
                                <% operationTypes.forEach(type => { %>
                                    <option value="<%= type.operation_type %>" <%= currentType === type.operation_type ? 'selected' : '' %>>
                                        <%= type.operation_type %>
                                    </option>
                                <% }); %>
                            </select>
                            <button class="btn btn-primary" type="submit">
                                <i class="bi bi-funnel"></i> 筛选
                            </button>
                            <% if (currentType) { %>
                                <a href="/logs" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle"></i> 清除
                                </a>
                            <% } %>
                        </div>
                    </form>
                </div>
                <div class="col-md-6 text-end mt-3 mt-md-0">
                    <div class="text-muted">
                        <i class="bi bi-database"></i> 共 <%= pagination.totalItems %> 条记录
                    </div>
                </div>
            </div>
        </div>

        <!-- 日志列表 -->
        <% if (logs.length === 0) { %>
            <div class="empty-state">
                <i class="bi bi-journal-x"></i>
                <h3>暂无日志记录</h3>
                <p>系统还没有任何操作日志</p>
            </div>
        <% } else { %>
            <% logs.forEach(log => { %>
                <div class="log-entry <%= log.status %> fade-in">
                    <div class="d-flex justify-content-between align-items-start">
                        <div style="flex: 1;">
                            <div class="d-flex align-items-center mb-2 flex-wrap gap-2">
                                <span class="badge operation-type-badge bg-primary">
                                    <i class="bi bi-gear me-1"></i><%= log.operation_type %>
                                </span>
                                <span class="badge status-badge bg-<%= log.status === 'success' ? 'success' : (log.status === 'error' ? 'danger' : 'secondary') %>">
                                    <%= log.status === 'success' ? '<i class="bi bi-check-circle me-1"></i>成功' : (log.status === 'error' ? '<i class="bi bi-x-circle me-1"></i>失败' : log.status) %>
                                </span>
                                <strong><%= log.target_name || log.target_type %></strong>
                            </div>
                            <div class="log-details mb-2">
                                <%= log.details || '无详细信息' %>
                            </div>
                            <div class="log-meta">
                                <i class="bi bi-clock"></i> <%= new Date(log.created_at).toLocaleString('zh-CN') %>
                                <% if (log.user_ip) { %>
                                    <span class="ms-3"><i class="bi bi-globe"></i> IP: <%= log.user_ip %></span>
                                <% } %>
                            </div>
                        </div>
                        <div class="text-end ms-3">
                            <small class="text-muted">ID: <%= log.id %></small>
                            <% if (log.user_agent) { %>
                                <div class="text-muted mt-1" style="font-size: 0.7rem; max-width: 200px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;" title="<%= log.user_agent %>">
                                    <i class="bi bi-browser-chrome"></i> <%= log.user_agent %>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } %>

        <!-- 分页导航 -->
        <% if (pagination && pagination.totalPages > 1) { %>
            <nav aria-label="日志分页">
                <ul class="pagination justify-content-center mt-4">
                    <% if (pagination.hasPrevPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.prevPage %><%= currentType ? '&type=' + currentType : '' %>" aria-label="上一页">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link" aria-hidden="true">&laquo;</span>
                        </li>
                    <% } %>

                    <!-- 页码 -->
                    <% for (let i = 1; i <= pagination.totalPages; i++) { %>
                        <% if (i === pagination.currentPage) { %>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link"><%= i %></span>
                            </li>
                        <% } else { %>
                            <li class="page-item">
                                <a class="page-link" href="?page=<%= i %><%= currentType ? '&type=' + currentType : '' %>"><%= i %></a>
                            </li>
                        <% } %>
                    <% } %>

                    <% if (pagination.hasNextPage) { %>
                        <li class="page-item">
                            <a class="page-link" href="?page=<%= pagination.nextPage %><%= currentType ? '&type=' + currentType : '' %>" aria-label="下一页">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    <% } else { %>
                        <li class="page-item disabled">
                            <span class="page-link" aria-hidden="true">&raquo;</span>
                        </li>
                    <% } %>
                </ul>

                <div class="text-center text-muted mt-2">
                    显示第 <%= (pagination.currentPage - 1) * 20 + 1 %> - 
                    <%= Math.min(pagination.currentPage * 20, pagination.totalItems) %> 条，
                    共 <%= pagination.totalItems %> 条记录
                </div>
            </nav>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
