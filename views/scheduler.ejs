<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>定时任务管理 - AI模型管理工具</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .task-card {
            transition: all var(--transition-base);
        }
        .task-card:hover {
            transform: translateY(-5px);
            box-shadow: var(--shadow-lg);
        }
        .status-indicator {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            display: inline-block;
            margin-right: 8px;
        }
        .status-running {
            background-color: var(--success-color);
            animation: pulse 2s infinite;
        }
        .status-stopped {
            background-color: var(--danger-color);
        }
        @keyframes pulse {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        .scheduler-controls {
            background: var(--gradient-primary);
            color: white;
            padding: 1.5rem;
            border-radius: var(--radius-xl);
            margin-bottom: 2rem;
            box-shadow: var(--shadow-md);
        }
        .task-status {
            font-size: 0.9rem;
        }
        .last-execution {
            font-size: 0.85rem;
            color: var(--gray-500);
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="bi bi-cpu"></i> AI模型管理工具
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">提供商列表</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/logs">操作日志</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/scheduler">定时任务</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <div class="scheduler-controls">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="mb-1">定时任务调度器</h2>
                    <p class="mb-0">管理系统中的定时任务，包括模型检测、健康检查和日志清理</p>
                </div>
                <div>
                    <span class="status-indicator <%= scheduler.isRunning ? 'status-running' : 'status-stopped' %>"></span>
                    <span id="scheduler-status-text"><%= scheduler.isRunning ? '运行中' : '已停止' %></span>
                </div>
            </div>
            <div class="mt-3">
                <% if (scheduler.isRunning) { %>
                    <button id="stop-scheduler" class="btn btn-light">
                        <i class="bi bi-stop-circle me-2"></i>停止调度器
                    </button>
                <% } else { %>
                    <button id="start-scheduler" class="btn btn-light">
                        <i class="bi bi-play-circle me-2"></i>启动调度器
                    </button>
                <% } %>
                <button id="refresh-status" class="btn btn-outline-light">
                    <i class="bi bi-arrow-clockwise me-2"></i>刷新状态
                </button>
            </div>
        </div>

        <div class="row">
            <% tasksStatus.tasks.forEach(task => { %>
                <div class="col-md-4 mb-4">
                    <div class="card task-card h-100">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0"><%= task.displayName %></h5>
                            <span class="badge bg-primary"><%= task.schedule %></span>
                        </div>
                        <div class="card-body">
                            <div class="task-status mb-2">
                                <strong>状态:</strong> 
                                <% if (task.lastExecution) { %>
                                    <span class="text-success">上次执行成功</span>
                                <% } else { %>
                                    <span class="text-secondary">尚未执行</span>
                                <% } %>
                            </div>
                            <% if (task.lastExecution) { %>
                                <div class="last-execution">
                                    <strong>上次执行时间:</strong> 
                                    <%= new Date(task.lastExecution).toLocaleString('zh-CN') %>
                                </div>
                            <% } %>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-grid gap-2">
                                <% if (task.name === 'modelDetection') { %>
                                    <button class="btn btn-outline-primary execute-task" data-task="model-detection">
                                        <i class="bi bi-search me-2"></i>立即执行模型检测
                                    </button>
                                <% } else if (task.name === 'healthCheck') { %>
                                    <button class="btn btn-outline-success execute-task" data-task="health-check">
                                        <i class="bi bi-heart-pulse me-2"></i>立即执行健康检查
                                    </button>
                                <% } else if (task.name === 'logCleanup') { %>
                                    <button class="btn btn-outline-warning execute-task" data-task="log-cleanup">
                                        <i class="bi bi-trash3 me-2"></i>立即执行日志清理
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <!-- 通知提示 -->
    <div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
        <div id="notification" class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">系统通知</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <div class="toast-body" id="notification-message">
                操作成功
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // 显示通知
            function showNotification(message, type = 'success') {
                const notificationEl = document.getElementById('notification');
                const messageEl = document.getElementById('notification-message');

                messageEl.textContent = message;

                // 根据类型设置样式
                notificationEl.classList.remove('bg-success', 'bg-danger', 'bg-warning');
                if (type === 'success') {
                    notificationEl.classList.add('bg-success', 'text-white');
                } else if (type === 'error') {
                    notificationEl.classList.add('bg-danger', 'text-white');
                } else if (type === 'warning') {
                    notificationEl.classList.add('bg-warning');
                }

                const toast = new bootstrap.Toast(notificationEl);
                toast.show();
            }

            // 启动调度器
            document.getElementById('start-scheduler').addEventListener('click', function() {
                fetch('/scheduler/start', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification(data.message, 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification(data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('请求失败', 'error');
                });
            });

            // 停止调度器
            document.getElementById('stop-scheduler').addEventListener('click', function() {
                fetch('/scheduler/stop', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        showNotification(data.message, 'success');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    } else {
                        showNotification(data.message, 'error');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    showNotification('请求失败', 'error');
                });
            });

            // 刷新状态
            document.getElementById('refresh-status').addEventListener('click', function() {
                window.location.reload();
            });

            // 执行任务
            document.querySelectorAll('.execute-task').forEach(button => {
                button.addEventListener('click', function() {
                    const taskType = this.getAttribute('data-task');
                    const originalText = this.innerHTML;

                    // 显示加载状态
                    this.innerHTML = '<span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>执行中...';
                    this.disabled = true;

                    fetch(`/scheduler/execute/${taskType}`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            showNotification(data.message, 'success');
                        } else {
                            showNotification(data.message, 'error');
                        }

                        // 恢复按钮状态
                        this.innerHTML = originalText;
                        this.disabled = false;
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        showNotification('请求失败', 'error');

                        // 恢复按钮状态
                        this.innerHTML = originalText;
                        this.disabled = false;
                    });
                });
            });
        });
    </script>
</body>
</html>
